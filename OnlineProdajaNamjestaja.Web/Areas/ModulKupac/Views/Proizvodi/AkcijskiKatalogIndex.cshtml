                                {<p><b>Cijena: </b><s>@x.Cijena KM  </s> @Math.Round(decimal.Parse(x.KonacnaCijena.ToString()), 2) KM</p>}
                            else
                            {<p><b>Cijena: </b>@x.Cijena KM </p>}
                                <p><b>Šifra: </b>@x.Sifra</p>
                                <p><b>Vrsta: </b>@x.Vrsta</p>
                                @if (x.BrojacBoja > 1)
                                {<p> **Više boja </p>}
                                else
                                {<p> <br /> </p>                }
